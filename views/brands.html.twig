<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <title>Find your Shoe Store</title>
    </head>
    <body>
        <div class='container'>
            <h1>Find your Shoe Store</h1>

            <div class="panel panel-default">
                <div class="panel-heading">{{ brand.getBrandName }} has shoes at these locations:
                </div>
                <div class="panel-body">
                    {% if stores is not empty %}
                        <ul>
                            {% for store in stores %}
                                <li><a href='/stores/{{ store.getId }}'>{{ store.getStoreName }}</a></li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p>No luck padre</p>
                    {% endif %}
                </div>

                <div class="panel-footer">
                    <form action='/add_stores' method='post'>
                        <div class='form-group'>
                            <input id='brand_id' name='brand_id' type='hidden' value='{{ brand.getId }}'>
                            <label for='store_id'>Add a store</label>
                            <select id='store_id' name='store_id' type='text'>
                                {% for store in all_stores %}
                                    <option value='{{ store.getId }}'>{{ store.getStoreName }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <button type='submit' class='btn btn-primary'>Add store</button>
                    </form>
                    <p><a href='/'>home</a>.</p>
                </div>

            </div>

        </div>
    </body>
</html>
